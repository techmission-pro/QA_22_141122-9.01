    $('body').on('change', ".dt-checkboxes", function () {
        if ($(this).is(":checked")) {
            $(".delete_button").removeClass("d-none");
        } else {
            $(".delete_button").addClass("d-none");
        }
    });


    $('body').on('change', "#checkboxSelectAll", function () {
        if ($(this).is(":checked")) {
            $(".dt-checkboxes").prop("checked", true);
            $(".delete_button").removeClass("d-none");
        } else {
            $(".dt-checkboxes").prop("checked", false);
            $(".delete_button").addClass("d-none");
        }
    });



    function setCookie(cname, cvalue, exdays) {
        var d = new Date();
        d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
        var expires = "expires=" + d.toGMTString();
        document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }

    function getCookie(name) {
        var value = "; " + document.cookie;
        var parts = value.split("; " + name + "=");
        if (parts.length == 2) return parts.pop().split(";").shift();
    }

    function updateQueryStringParameter(baseUrl, key, value) {
        var uri = window.location.href;
        var separator = uri.indexOf('?') !== -1 ? "&" : "?";
        if (value != null) {
            var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");

            if (uri.match(re)) {
                return uri.replace(re, '$1' + key + "=" + value + '$2');
            } else {
                return uri + separator + key + "=" + value;
            }
        } else {
            let url = new URL(uri);
            let params = new URLSearchParams(url.search.slice(1));
            params.delete(key);
            if (params != "") {
                return baseUrl + "?" + params;
            } else {
                return baseUrl;
            }
        }
    }



    function getDataFromAjax(data, callback){
        return  $.ajax({
            type: 'post',
            url: data.url,
            data: data.data,
            cache: false
        }).done(callback)
    }

    function sendAjax(method, data, callback){
        return  $.ajax({
            type: method,
            url: data.url,
            data: data.data,
            cache: false
        }).done(callback)
    }




    function sendFileDataToCloudRegistry(data, callback){

        return  $.ajax({
            type: 'post',
            url: data.url,
            data: data.data,
            cache: false
        }).done(callback)

    }



    function displayToastr(type, text){
        toastr[type](
            '',
            text,
            {
                closeButton: true,
                tapToDismiss: true,
                progressBar: true,
                preventDuplicates: true,
                positionClass: "toast-top-right"
            }
        );
    }



    


